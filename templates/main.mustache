{{!
    @template block_townsquare/main

    This template renders the main content area for the townsquare block.
}}
<div id="townsquare_root" class="townsquare_root container-fluid">
    <div class="row townsquare_main">
        <div class="col-md-3 townsquare_sidepanel">
            {{#str}} seitenpanel, block_townsquare {{/str}}
        </div>

        <div class="col-md-9 townsquare_content">
            <div class="townsquare_letters">
                {{#content}}
                        {{#isorientationmarker}}
                            {{> block_townsquare/orientationmarker}}
                        {{/isorientationmarker}}
                        {{#isbasic}}
                            {{> block_townsquare/basicletter}}
                        {{/isbasic}}
                        {{#isactivitycompletion}}
                            {{> block_townsquare/activitycompletionletter}}
                        {{/isactivitycompletion}}
                        {{#ispost}}
                            {{> block_townsquare/postletter}}
                        {{/ispost}}
                {{/content}}
            </div>
        </div>
    </div>
</div>