{{!
    @template block_townsquare/basicletter

    This template renders a basic letter.
}}
<div class="basicletter card text-dark border-info mb-3" id="letter-nr-{{letterid}}">
    <div class="basicletter_header card-header">
        <div class = "basicletter_top">
            <div class = "basicletter_course">
                {{#str}} lettercourse, block_townsquare, {"course":
                    {{#quote}} <a href='{{linktocourse}}'>{{coursename}}</a> {{/quote}} } {{/str}}
            </div>
            <div class = "basicletter_date">
                {{created}}
            </div>
        </div>
    </div>
    <div class="basicletter_body card-body">
        <div class="basicletter_content">
            <p> {{content}} </p>
        </div>

    </div>
</div>