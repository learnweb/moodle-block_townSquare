{{!
    @template block_townsquare/basicletter

    This template renders a basic letter.
}}
<div class="townsquare_letter basicletter card text-dark mb-3" id="content-nr-{{contentid}}">
    <div class="townsquareletter_header basicletter_header card-header">
        <div class = "townsquareletter_top basicletter_top">
            <div class = "townsquareletter_course basicletter_course">
                {{#str}} lettercourse, block_townsquare, {"course":
                    {{#quote}} <a href='{{linktocourse}}' style="color: #fff">{{coursename}}</a> {{/quote}} } {{/str}}
            </div>
            <div class = "townsquareletter_date basicletter_date">
                {{created}}
            </div>
        </div>
    </div>
    <div class="townsquareletter_body basicletter_body card-body">
        <div class="basicletter_content">
            <p> {{content}} </p>
        </div>

    </div>
</div>