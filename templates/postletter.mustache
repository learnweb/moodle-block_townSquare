{{!
    @template block_townsquare/postletter

    This template renders a post letter.
}}
<div class = "container-fluid postletter">
    <div class = "row postletterinformation">
        <div class = "col-md-3 postletter_date">
            {{created}}
        </div>
        <div class =col-md-8 postletter_origin>
            From <a href='{{linktocourse}}'>{{coursename}}</a> -> <a href='{{linktomoduleinstance}}'>{{modulename}}</a>:
        </div>
    </div>
    <div class = "postlettercontent">
        <a href='{{linktoauthor}}'>{{authorname}}</a> in <a href='{{linktopost}}'>{{subject}}</a>:
        {{message}}
    </div>
</div>