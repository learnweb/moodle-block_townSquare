{{!
    @template block_townsquare/blockcontent

    This template renders the side panel with the filters for the townsquare content.
}}
<div class="townsquare_filter_menu accordion" id="ts_filter">
    <div class="card">
        <div class="card-header" id="ts_course_filter">
            <h2 class="mb-0">
                <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#ts_user_courses" aria-expanded="true" aria-controls="ts_user_courses">
                    {{#str}}coursefilter, block_townsquare{{/str}}
                </button>
            </h2>
        </div>

        <div id="ts_user_courses" class="collapse show" aria-labelledby="ts_course_filter" data-parent="#ts_filter">
            <div class="card-body">
                {{#courses}}
                    <div class="form-check">
                        <input class="ts_course_checkbox form-check-input" name="ts_course_checkbox" type="checkbox" value="" id="{{courseid}}" checked>
                        <label class="form-check-label" for="{{courseid}}">
                            {{coursename}}
                        </label>
                    </div>
                {{/courses}}
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header" id="ts_time_filter">
            <h2 class="mb-0">
                <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#ts_times" aria-expanded="true" aria-controls="ts_times">
                    {{#str}}timefilter, block_townsquare{{/str}}
                </button>
            </h2>
        </div>
        <div id="ts_times" class="collapse" aria-labelledby="ts_time_filter" data-parent="#ts_filter">
            <div class="card-body">
                <div class="btn-group-vertical btn-group-toggle btn-block" data-toggle="buttons">
                    <label class="ts_time_buttons btn btn-secondary active">
                        <input class="ts_time_button" type="radio" name="ts_time_options" id="ts_time_all" autocomplete="off" > {{#str}}allnotifications, block_townsquare{{/str}}
                    </label>
                    <label class="ts_time_buttons btn btn-secondary">
                        <input class="ts_time_button" type="radio" name="ts_time_options" id="ts_time_next_week" autocomplete="off"> {{#str}}nextweeknotifications, block_townsquare{{/str}}
                    </label>
                    <label class="ts_time_buttons btn btn-secondary">
                        <input class="ts_time_button" type="radio" name="ts_time_options" id="ts_time_next_month" autocomplete="off"> {{#str}}nextmonthnotifications, block_townsquare{{/str}}
                    </label>
                    <label class="ts_time_buttons btn btn-secondary">
                        <input class="ts_time_button" type="radio" name="ts_time_options" id="ts_time_last_week" autocomplete="off"> {{#str}}lastweeknotifications, block_townsquare{{/str}}
                    </label>
                    <label class="ts_time_buttons btn btn-secondary">
                        <input class="ts_time_button" type="radio" name="ts_time_options" id="ts_time_last_month" autocomplete="off"> {{#str}}lastmonthnotifications, block_townsquare{{/str}}
                    </label>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header" id="ts_letter_filter">
            <h2 class="mb-0">
                <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#ts_fletters" aria-expanded="false" aria-controls="ts_fletters">
                    {{#str}}letterfilter, block_townsquare{{/str}}
                </button>
            </h2>
        </div>
        <div id="ts_fletters" class="collapse" aria-labelledby="ts_letter_filter" data-parent="#ts_filter">
            <div class="card-body">
                <div class="form-check">
                    <input class="ts_letter_checkbox form-check-input" name="ts_letter_checkbox" type="checkbox" value="" id="basicletter" checked>
                    <label class="form-check-label" for="ts_basicletter_check">
                        {{#str}}basicletters, block_townsquare{{/str}}
                    </label>
                </div>
                <div class="form-check">
                    <input class="ts_letter_checkbox form-check-input" name="ts_letter_checkbox" type="checkbox" value="" id="completionletter" checked>
                    <label class="form-check-label" for="ts_completionletter_check">
                        {{#str}}completionletters, block_townsquare{{/str}}
                    </label>
                </div>
                <div class="form-check">
                    <input class="ts_letter_checkbox form-check-input" name="ts_letter_checkbox" type="checkbox" value="" id="postletter" checked>
                    <label class="form-check-label" for="ts_postletter_check">
                        {{#str}}postletters, block_townsquare{{/str}}
                    </label>
                </div>
            </div>
        </div>
    </div>
</div>