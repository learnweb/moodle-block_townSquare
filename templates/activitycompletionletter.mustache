{{!
    @template block_townsquare/activitycompletionletter

    This template renders a activity completion letter.
}}
<div class = "container-fluid completionletter">
    <div class = "row completionletterinformation">
        <div class = "col-md-3 postletter_date">
            {{created}}
        </div>
        <div class =col-md-8 completionletter_origin>
            In <a href='{{linktocourse}}'>{{coursename}}</a> is a completion required by
                <a href='{{linktoactivity}}'>{{modulename}}</a>:
    </div>
    <div class = "completionlettercontent">
    {{content}}
    </div>
</div>